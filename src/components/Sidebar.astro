---
import { t, type Lang, defaultLang, getLangPrefix, getAlternateUrl, getAlternateLangLabel } from '../i18n/utils';

interface Props {
  lang?: Lang;
  currentPath?: string;
}

const { lang = defaultLang, currentPath = '/' } = Astro.props;
const pathname = currentPath;
const prefix = getLangPrefix(lang);
const alternateUrl = getAlternateUrl(currentPath);
const alternateLangLabel = getAlternateLangLabel(lang);

const navItems = [
  { name: t(lang, 'nav.home'), path: `${prefix}/` },
  { name: t(lang, 'nav.blog'), path: `${prefix}/blog` },
  { name: t(lang, 'nav.about'), path: `${prefix}/about` },
];
---

<aside class="sidebar">
  <div class="sidebar-content">
    <div class="logo">
      <div class="king-circle">♚</div>
    </div>
    
    <nav class="nav-links">
      {navItems.map(item => (
        <a href={item.path} class:list={['nav-item', { active: pathname === item.path || (item.path !== `${prefix}/` && pathname.startsWith(item.path)) }]}>
          <span class="chess-marker">♚</span>
          <span class="nav-text">{item.name}</span>
        </a>
      ))}
    </nav>

    <div class="bottom-controls">
      <a href={alternateUrl} class="control-btn lang-switch">{alternateLangLabel}</a>
      <button class="control-btn" id="theme-toggle" aria-label="Toggle theme">
        <span class="icon-sun">☀</span>
        <span class="icon-moon">☾</span>
      </button>
    </div>
  </div>
</aside>

<button class="mobile-toggle" aria-label="Menu">
  <span class="hamburger"></span>
</button>

<script>
  const mobileToggle = document.querySelector('.mobile-toggle');
  const sidebar = document.querySelector('.sidebar');
  
  mobileToggle?.addEventListener('click', () => {
    sidebar?.classList.toggle('open');
    mobileToggle.classList.toggle('active');
  });

  const themeToggle = document.getElementById('theme-toggle');
  
  themeToggle?.addEventListener('click', () => {
    // Add transition class to trigger flip animation
    document.body.classList.add('theme-transitioning');
    
    // Switch theme halfway through the flip (when content is invisible at 90deg)
    setTimeout(() => {
      const currentTheme = localStorage.getItem('theme') || 'light';
      const newTheme = currentTheme === 'light' ? 'dark' : 'light';
      
      document.documentElement.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
    }, 300);

    // Remove class after animation completes to reset
    setTimeout(() => {
      document.body.classList.remove('theme-transitioning');
    }, 600);
  });
</script>

<style>
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: 240px;
    height: 100vh;
    background-color: var(--color-bg-black);
    border-right: 1px solid var(--color-border);
    z-index: 100;
    transition: transform 0.3s ease;
  }

  .sidebar-content {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: var(--space-lg);
  }

  .logo {
    margin-bottom: var(--space-2xl);
    display: flex;
    justify-content: center;
  }

  .king-circle {
    width: 64px;
    height: 64px;
    border: 4px solid var(--color-text-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32px;
    font-weight: 900;
    color: var(--color-text-primary);
  }

  .nav-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    flex-grow: 1;
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-title);
    font-weight: 700;
    font-size: 1.2rem;
    padding: var(--space-xs) 0;
    opacity: 0.6;
    transition: opacity 0.2s;
  }

  .nav-item:hover, .nav-item.active {
    opacity: 1;
  }

  .chess-marker {
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.2s;
  }

  .nav-item.active .chess-marker {
    opacity: 1;
    transform: translateX(0);
  }

  .bottom-controls {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
  }

  .control-btn {
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text-primary);
    padding: var(--space-xs) var(--space-sm);
    cursor: pointer;
    font-family: var(--font-code);
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .control-btn:hover {
    background: var(--color-text-primary);
    color: var(--color-bg-white);
  }

  .lang-switch {
    text-decoration: none;
    font-weight: 700;
    letter-spacing: 0.05em;
  }

  :global([data-theme="light"]) .icon-moon { display: inline; }
  :global([data-theme="light"]) .icon-sun { display: none; }
  :global([data-theme="dark"]) .icon-moon { display: none; }
  :global([data-theme="dark"]) .icon-sun { display: inline; }

  .mobile-toggle {
    display: none;
    position: fixed;
    top: var(--space-md);
    right: var(--space-md);
    z-index: 200;
    background: var(--color-bg-white);
    border: 1px solid var(--color-border);
    width: 40px;
    height: 40px;
    align-items: center;
    justify-content: center;
    cursor: pointer;
  }

  .hamburger {
    width: 20px;
    height: 2px;
    background: var(--color-text-primary);
    position: relative;
  }
  .hamburger::before, .hamburger::after {
    content: '';
    position: absolute;
    width: 20px;
    height: 2px;
    background: var(--color-text-primary);
    left: 0;
    transition: 0.3s;
  }
  .hamburger::before { top: -6px; }
  .hamburger::after { top: 6px; }

  .mobile-toggle.active .hamburger { background: transparent; }
  .mobile-toggle.active .hamburger::before { transform: rotate(45deg); top: 0; }
  .mobile-toggle.active .hamburger::after { transform: rotate(-45deg); top: 0; }

  @media (max-width: 768px) {
    .sidebar {
      transform: translateX(-100%);
    }
    .sidebar.open {
      transform: translateX(0);
    }
    .mobile-toggle {
      display: flex;
    }
  }
</style>
