---
import { t, type Lang, defaultLang } from '../i18n/utils';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;

const squares = Array.from({ length: 64 }, (_, i) => {
  const row = Math.floor(i / 8);
  const col = i % 8;
  const isDark = (row + col) % 2 === 1;
  return isDark;
});
---

<section id="hero">
  <div class="chessboard-bg" aria-hidden="true">
    {squares.map((isDark, i) => (
      <div 
        class={`square ${isDark ? 'dark' : ''}`} 
        style={`--delay: ${(i % 8 + Math.floor(i / 8)) * 0.1}s`}
      />
    ))}
  </div>

  <div class="content">
    <h1 class="name">WANG ZHAI</h1>
    <div class="subtitle-zh">{t(lang, 'hero.subtitle.line1')}</div>
    {t(lang, 'hero.subtitle.line2') && (
      <div class="subtitle-en">{t(lang, 'hero.subtitle.line2')}</div>
    )}
  </div>

  <div class="scroll-indicator">
    â†“
  </div>
</section>

<style>
  #hero {
    position: relative;
    height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    background-color: var(--color-bg-white);
  }

  /* Chessboard Background */
  .chessboard-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    grid-template-rows: repeat(8, 1fr);
    z-index: 0;
    pointer-events: none;
    opacity: 0.06;
  }

  .square {
    width: 100%;
    height: 100%;
    opacity: 0;
    animation: squareFadeIn 1s ease-out forwards;
    animation-delay: var(--delay);
  }

  @keyframes squareFadeIn {
    from { opacity: 0; transform: scale(0.8); }
    to { opacity: 1; transform: scale(1); }
  }

  .square.dark {
    background-color: var(--color-text-primary);
  }

  /* Content */
  .content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: var(--space-md);
  }

  .name {
    font-family: var(--font-title);
    font-weight: 900;
    color: var(--color-text-primary);
    line-height: 1.1;
    margin-bottom: var(--space-md);
    font-size: clamp(3rem, 10vw, 6rem);
    animation: fadeSlideUp 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  .subtitle-zh {
    font-family: var(--font-main);
    font-size: clamp(1.2rem, 3vw, 2rem);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xs);
    font-weight: 400;
    opacity: 0;
    animation: fadeIn 0.8s ease-out 0.3s forwards;
  }

  .subtitle-en {
    font-family: var(--font-main);
    font-size: clamp(0.9rem, 2vw, 1.2rem);
    color: var(--color-text-secondary);
    font-weight: 300;
    letter-spacing: 0.05em;
    opacity: 0;
    animation: fadeIn 0.8s ease-out 0.3s forwards;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: var(--space-lg);
    font-size: 2rem;
    color: var(--color-text-secondary);
    animation: bounce 2s infinite ease-in-out;
    z-index: 1;
    cursor: default;
    user-select: none;
  }

  /* Animations */
  @keyframes fadeSlideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(10px);
    }
    60% {
      transform: translateY(5px);
    }
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .content {
      padding: var(--space-lg);
    }
  }
</style>
