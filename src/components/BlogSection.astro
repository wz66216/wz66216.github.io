---
import { getCollection } from 'astro:content';
import { t, type Lang, defaultLang, getLangPrefix } from '../i18n/utils';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const prefix = getLangPrefix(lang);

const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 4);

const categoryIcons: Record<string, string> = {
  '物理笔记': '♜',
  '国际象棋': '♞',
  '随笔': '♝',
};
---

<section id="blog">
  <div class="container animate-on-scroll">
    <h2>{t(lang, 'blog.section.title')}</h2>
    <div class="chessboard-divider" role="separator"></div>

    <div class="blog-grid">
      {recentPosts.map((post, index) => {
        const displayTitle = lang === 'en' && post.data.title_en
          ? post.data.title_en
          : post.data.title;
        return (
          <a href={`${prefix}/blog/${post.id}`} class="blog-card animate-knight" style={`--stagger: ${index}`}>
            <div class="card-content">
              <h3>{displayTitle}</h3>
              <div class="meta">
                <span class="date">{post.data.date.toISOString().split('T')[0]}</span>
                <span class="separator">·</span>
                <span class="icon">{categoryIcons[post.data.category] || '♟'}</span>
                <span class="category">{post.data.category}</span>
              </div>
            </div>
          </a>
        );
      })}
    </div>

    <div class="view-all">
      <a href={`${prefix}/blog`}>{t(lang, 'blog.view.all')}</a>
    </div>
  </div>
</section>

<style>
  #blog {
    padding: var(--space-2xl) var(--space-lg);
    background-color: var(--color-bg-white);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  h2 {
    font-family: var(--font-title);
    font-weight: 900;
    font-size: clamp(1.5rem, 4vw, 2rem);
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
    text-transform: uppercase;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0; /* Seamless checkerboard */
    border: 1px solid var(--color-border);
  }

  .blog-card {
    display: block;
    padding: var(--space-lg);
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid var(--color-border);
  }

  .card-content {
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: center;
  }

  h3 {
    font-family: var(--font-title);
    font-weight: 700;
    font-size: 1.1rem;
    margin-bottom: var(--space-sm);
    color: inherit;
  }

  .meta {
    font-family: var(--font-code);
    font-size: 0.85rem;
    color: inherit;
    opacity: 0.8;
  }

  .separator {
    margin: 0 var(--space-xs);
  }

  /* Desktop/Tablet Checkerboard Logic (2 columns) */
  @media (min-width: 768px) {
    .blog-card:nth-child(4n+1),
    .blog-card:nth-child(4n+4) {
      background-color: var(--color-bg-white);
      color: var(--color-text-primary);
    }

    .blog-card:nth-child(4n+2),
    .blog-card:nth-child(4n+3) {
      background-color: var(--color-section-dark-bg);
      color: var(--color-section-dark-text);
    }
  }

  /* Mobile Logic (1 column) */
  @media (max-width: 767px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }

    .blog-card:nth-child(odd) {
      background-color: var(--color-bg-white);
      color: var(--color-text-primary);
    }

    .blog-card:nth-child(even) {
      background-color: var(--color-section-dark-bg);
      color: var(--color-section-dark-text);
    }
  }

  /* Hover: Invert colors */

  @media (min-width: 768px) {
    /* White cards become Black */
    .blog-card:nth-child(4n+1):hover,
    .blog-card:nth-child(4n+4):hover {
      background-color: var(--color-section-dark-bg);
      color: var(--color-section-dark-text);
    }

    /* Black cards become White */
    .blog-card:nth-child(4n+2):hover,
    .blog-card:nth-child(4n+3):hover {
      background-color: var(--color-bg-white);
      color: var(--color-text-primary);
    }
  }

  @media (max-width: 767px) {
    .blog-card:nth-child(odd):hover {
      background-color: var(--color-section-dark-bg);
      color: var(--color-section-dark-text);
    }

    .blog-card:nth-child(even):hover {
      background-color: var(--color-bg-white);
      color: var(--color-text-primary);
    }
  }

  /* View All Link */
  .view-all {
    text-align: center;
    margin-top: var(--space-lg);
  }

  .view-all a {
    font-family: var(--font-title);
    font-weight: 700;
    color: var(--color-text-primary);
    text-decoration: none;
    font-size: 1rem;
  }

  .view-all a:hover {
    text-decoration: underline;
  }

  /* Responsive Padding */
  @media (max-width: 768px) {
    #blog {
      padding: var(--space-xl) var(--space-md);
    }
  }
</style>
